        <item name="hintTextAppearance">@style/TextLabel</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:background">@drawable/custom_text_input_layout_background</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.MaterialComponents.Caption">
